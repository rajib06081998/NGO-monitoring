<% include ../partials/top %>

<!-- Banner -->
<!-- Note: The "styleN" class below should match that of the header element. -->
	<section id="banner" class="style1">
		<div class="inner">
			<span class="image">
				<img src="images/pic07.jpg" alt="" />
			</span>
			<header class="major">
				<h1>Government Projects</h1>
			</header>
			<%if(employee){%>
				<button onclick="window.location.href='/project/add/gov'" >Add Project</button>
			<%}%>
		</div>
	</section>

<!-- Main -->
	<div id="main">

		<!-- Two -->
		
		<section id="two" class="spotlights">
			<%projects.forEach(function(project){%>
				<section>
					<a href="/project/<%= project._id %>" class="image">
						<img src="/uploads/project/<%= project.image%>" alt="" data-position="center center" />
					</a>
					<div class="content">
						<div class="inner">
							<header class="major">
								<h3><%= project.title %></h3>
							</header>
							<p><%= project.description %></p>
							<ul class="actions">
								<li><a href="/project/<%= project._id %>" class="button">Learn more</a></li>
							</ul>
						</div>
					</div>
				</section>
			<% });%>
		</section>

		<!-- Three -->

	</div>

<% include ../partials/footer %>