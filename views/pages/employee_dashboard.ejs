<%include ../partials/top%>
<!-- <section> -->
	<div class="main">
		<!-- <br> -->
		<div class="row">
			<div class="col-3 col-12-small buttons">
				<br>
				<%if(requestType!= 'ppr'){%>
					<button onclick="window.location.href='/employee/ppr?pageno=1'" >Pending Permission Requests</button>
				<%}if(requestType!= 'apr'){%>
					<button onclick="window.location.href='/employee/apr?pageno=1'" >Approved Permission Requests</button>
				<%}if(requestType!= 'pfr'){%>
					<button onclick="window.location.href='/employee/pfr?pageno=1'" >Pending Fund Requests</button>
				<%}if(requestType!= 'afr'){%>
					<button onclick="window.location.href='/employee/afr?pageno=1'" >Approved Fund Requests</button>
				<%}%>
					<button onclick="window.location.href='/project/gov?pageno=1'" >Government Projects</button>

			</div>
			<div class="col-9 col-12-small reqList">
				<div>
					<%if(requestType== 'ppr'){%>
						<h1>Pending Permission Requests</h1>
					<%}else if(requestType== 'apr'){%>
						<h1>Approved Permission Requests</h1>
					<%}else if(requestType== 'pfr'){%>
						<h1>Pending Fund Requests</h1>
					<%}else{%>
						<h1>Approved Fund Requests</h1>
					<%} %>
				</div>
				<div>	
					<%requests.forEach(function(request){%>
						<div  onclick="
								location.href=
								<%if(requestType== 'ppr' || requestType== 'apr'){%>
									'/employee/showpermissionRequest/<%= request._id %>'
								<%}else{%>
									'/employee/showfundRequest/<%= request._id %>'
								<%}%>
								;" class="reqInList" >
							<h3><%=request.project%></h3>
						</div>
					<%});%>
					<div>
						<%for(var i=0;i<count;i++){%>
							<%if(pageno==i+1){%>
								<a style="background-color: #479b98;font-size: 40px" href="/employee/<%=requestType%>?pageno=<%=i+1%>"><%=i+1%></a>
							<%}else{%>
								<a style="font-size: 40px" href="/employee/<%=requestType%>?pageno=<%=i+1%>"><%=i+1%></a>
							<%}%>
						<%}%>
					</div>
				</div>
			</div>
		</div>
	</div>
<!-- </section> -->
<%include ../partials/footer%>