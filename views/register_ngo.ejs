						<option>health</option>
						<option>education</option>
					</select>
				</div>
				<div class="col-12">
					<textarea name="description" id="demo-message" placeholder="Enter Description of the ngo" rows="6"></textarea>
				</div>
				<!-- Break -->
				<div class="col-12">
					<ul class="actions">
						<li><input type="submit" value="signup" class="primary" /></li>
						<!-- <li><input type="reset" value="Reset" /></li> -->
					</ul>
				</div>
			</div>
		</form>
	</div>
